{
  "name": "@eclipse-che/ports-plugin2",
  "publisher": "Eclipse Che",
  "version": "0.0.1",
  "keywords": [
    "theia-plugin"
  ],
  "description": "Manage Eclipse Che Ports Plugin",
  "license": "EPL-2.0",
  "files": [
    "src",
    "resources"
  ],
  "activationEvents": [
    "*"
  ],
    "contributes": {
        "viewsContainers": {
            "right": [
                {
                    "id": "endpoints",
                    "title": "Endpoints",
                    "icon": "resources/plug.svg"
                }
            ]
        },
        "views": {
            "endpoints": [
                {
                    "id": "endpoints",
                    "name": "Endpoints"
                }
            ]
        }
    },
  "dependencies": {},
  "devDependencies": {
    "@eclipse-che/plugin": "latest",
    "@theia/plugin": "next",
    "@theia/plugin-packager": "latest",
    "@types/jest": "25.2.1",
        "rimraf": "2.6.2",
        "typescript": "~3.9.2",
        "typescript-formatter": "7.2.2",
    "@types/node": "^12.0.0"
  },
  "scripts": {
    "prepare": "yarn clean && yarn build && yarn lint:fix && yarn test",
    "clean": "rimraf lib",
    "format": "tsfmt -r --useTsfmt ../../configs/tsfmt.json",
    "lint": "eslint --cache=true --no-error-on-unmatched-pattern=true \"{src,test}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix --cache=true --no-error-on-unmatched-pattern=true \"{src,test}/**/*.{ts,tsx}\"",
    "compile": "tsc",
    "build": "yarn compile && theia-plugin pack",
    "watch": "tsc -w",
    "test": "jest",
    "test-watch": "jest --watchAll"
  },
  "engines": {
    "theiaPlugin": "next"
  },
  "theiaPlugin": {
    "backend": "lib/ports-plugin.js"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
